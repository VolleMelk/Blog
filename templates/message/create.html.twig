{% extends 'base.html.twig' %}

{% block title %} Create Message {% endblock %}

{% block body %}

    <h1> Create Message </h1>

    <form method="POST" action="/message/store">
        <div class="mb-3">
            <label for="formGroupExampleInput" class="form-label">Body</label>
            <input type="text" class="form-control" id="body" name="body" placeholder="Enter message" required>       
            <input type="hidden" class="form-control" id="post" name="post" value="{{ post }}" required>       
            <button type="submit" class="btn btn-primary" style="margin-top: 2%">
                Create Message
            </button>   
        </div>
        
    </form> 

{% endblock %}

